{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "dist/main",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/main/**/*"]
}
