{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "useDefineForClassFields": true,
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src/renderer/**/*.ts", "src/renderer/**/*.d.ts", "src/renderer/**/*.tsx", "src/renderer/**/*.vue"]
}
